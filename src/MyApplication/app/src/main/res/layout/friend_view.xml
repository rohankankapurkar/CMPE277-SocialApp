<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="2"
        android:background="@drawable/profileicon"
        tools:ignore="ContentDescription"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_weight="8">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="25dp"
            android:text="xyz"
            android:paddingLeft="5dp"
            android:id="@+id/friend_name_tv"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/friend_email_tv"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="@string/already_friends"
                android:id="@+id/button_0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/button_1"
                android:text="@string/friend_request_sent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/button_2"
                android:textAlignment="center"
                android:background="#FFBF00"
                android:text="@string/accept_firend_requst"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>