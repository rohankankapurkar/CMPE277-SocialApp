<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rohankankapurkar.facebook.UserProfileActivity"
    android:background="@color/white"

    tools:showIn="@layout/activity_user_profile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="30dp"
            android:background="@color/white">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:id="@+id/profileIcon"
                android:src="@drawable/profile"/>
            <TextView
                android:id="@+id/userNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/profileIcon"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/profileIcon"
                android:editable="true"
                android:text="User Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true" />
            <EditText
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/profileIcon"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/profileIcon"
                android:visibility="gone"
                android:text="User Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />




            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:id="@+id/emailIcon"
                android:layout_below="@+id/profileIcon"
                android:src="@drawable/email"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/userEmailText"
                android:text="demoemail@example.com"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@+id/emailIcon"
                android:layout_below="@+id/userNameText"
                android:layout_toRightOf="@+id/emailIcon"
                android:layout_alignEnd="@+id/userAddressText" />
            <EditText
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/emailIcon"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/emailIcon"
                android:text="User Email"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignEnd="@+id/userAddressText" />



            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:id="@+id/addressIcon"
                android:layout_below="@+id/emailIcon"
                android:src="@drawable/address"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/userAddressText"
                android:text="Demo Address"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@+id/addressIcon"
                android:layout_below="@+id/userEmailText"
                android:layout_toRightOf="@+id/addressIcon"
                android:layout_alignEnd="@+id/userProfessionText" />
            <EditText
                android:id="@+id/userAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/addressIcon"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/addressIcon"
                android:text="User Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignEnd="@+id/userProfessionText" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:id="@+id/professionIcon"
                android:layout_below="@+id/addressIcon"
                android:src="@drawable/profession"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userProfessionText"
                android:text="Profession (e.g: Developer)"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@+id/professionIcon"
                android:layout_below="@+id/userEmailText"
                android:layout_toRightOf="@+id/professionIcon" />
            <EditText
                android:id="@+id/userProfession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/professionIcon"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/professionIcon"
                android:visibility="gone"
                android:text="User Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:id="@+id/interestIcon"
                android:layout_below="@+id/professionIcon"
                android:src="@drawable/interest"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userInterestsText"
                android:text="Interest (e.g: Travelling)"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@+id/interestIcon"
                android:layout_below="@+id/userEmailText"
                android:layout_toRightOf="@+id/interestIcon"
                android:layout_alignEnd="@+id/userProfessionText" />
            <EditText
                android:id="@+id/userInterests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/interestIcon"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/interestIcon"
                android:visibility="gone"
                android:text="User Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:id="@+id/aboutmeIcon"
                android:layout_below="@+id/interestIcon"
                android:src="@drawable/aboutme"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userAboutMeText"
                android:text="Describe yourself....."
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@+id/aboutmeIcon"
                android:layout_below="@+id/userEmailText"
                android:layout_toRightOf="@+id/aboutmeIcon"
                android:layout_alignEnd="@+id/userInterestsText" />
            <EditText
                android:id="@+id/userAboutMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/aboutmeIcon"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/aboutmeIcon"
                android:visibility="gone"
                android:text="User Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:id="@+id/profilevis"
                android:layout_below="@+id/aboutmeIcon"
                android:src="@drawable/lock"/>


            <CheckBox
                android:id="@+id/visibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/profilevis"
                android:layout_toRightOf="@+id/profilevis"
                android:buttonTint="@color/black"
                android:text="Friends Only"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />



            <Button
                android:id="@+id/updateProfile"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:text="Save"
                android:visibility="gone"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/visibility"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>




</android.support.v4.widget.NestedScrollView>
